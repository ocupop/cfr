---
layout: null
---
<!--currently storing this in window object, would be nice to convert to json-->
{
  {% for product in site.products %}
    "{{ product.slug }}": {
    "title": "{{ product.title | xml_escape }}",
    "url": " {{ product.url | xml_escape | prepend: site.url }}",
    "summary": "{{ product.summary }}",
    "categories": "{{ product.categories }}",
    "brands": "{{ product.brands }}",

  },
  {% endfor %}
  {% for collection in site.collections %}
    "{{ collection.slug }}": {
    "title": "{{ collection.title | xml_escape }}",
    "url": "{{ collection.url | xml_escape | prepend: site.url }}",
    "description": "{{ collection.description }}"
  }
    {% unless forloop.last %},
  {% endunless %}
  {% endfor %}
}